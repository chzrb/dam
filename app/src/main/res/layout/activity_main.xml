<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bleu"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMPL"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"

        app:cardCornerRadius="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Please enter informations Below"
                />

            <EditText
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:hint="ID"

                />

            <EditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:inputType="textPersonName"
                android:hint="First name"

                />

            <EditText
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:inputType="textPersonName"
                android:hint="Last name"

                />

            <EditText
                android:id="@+id/tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:inputType="phone"
                android:hint="Telephone number"

                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:inputType="textEmailAddress"
                android:hint="Email address"
                />

            <Button
                android:background="@drawable/round2"
                android:textColor="@color/black"
                android:id="@+id/btnadd"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add employee "
                android:textSize="18sp"
                android:layout_marginTop="30dp"

                />





        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnadd"
        android:layout_gravity="center"
        android:text="would u like to ! "
        android:textSize="24sp"
        android:gravity="center_horizontal"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <Button

            android:id="@+id/btConsult"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnadd"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/round"
            android:padding="10dp"
            android:text="  CONSULT via              '' Grid '' "
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnConsult2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btConsult"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round"
           android:padding="10dp"

            android:text=" CONSULT via         '' List '' "
            android:textColor="@color/black"
            android:textSize="17sp" />


    </LinearLayout>


</LinearLayout>